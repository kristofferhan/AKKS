<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="8dp"
    android:columnCount="2"
    android:rowCount="2">

    <TextView
        android:id="@+id/reserver"
        style="@style/CategoryStyle"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="8dp"
        android:background="@color/categories"
        android:drawableTop="@drawable/ic_insert_invitation_black_24dp"
        android:gravity="center"
        android:text="@string/reserver" />

    <TextView
        android:id="@+id/bookinger"
        style="@style/CategoryStyle"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:background="@color/categories"
        android:drawableTop="@drawable/ic_person_black_24dp"
        android:gravity="center"
        android:text="@string/bookinger" />

    <TextView
        android:id="@+id/lokaler"
        style="@style/CategoryStyle"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="8dp"
        android:background="@color/categories"
        android:drawableTop="@drawable/ic_domain_black_24dp"
        android:gravity="center"
        android:text="@string/lokaler" />

    <TextView
        android:id="@+id/om"
        style="@style/CategoryStyle"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:background="@color/categories"
        android:drawableTop="@drawable/ic_info_black_24dp"
        android:gravity="center"
        android:text="@string/info" />

</GridLayout>


